{
    "modes": [
        "manual",
        "auto"
    ],
    "servos": {
        "pan_limits_deg": [
            20,
            160
        ],
        "tilt_limits_deg": [
            20,
            140
        ]
    },
    "camera": {
        "stream_fps_cap": 15,
        "frame_source": "latest_frame_buffer",
        "rotation": 90
    },
    "laser": {
        "gpio_pin": 18,
        "active_high": true,
        "max_on_ms": 800
    },
    "calibration": {
        "roi_radius_px": 35,
        "method": "multivariate_linear_regression_2d"
    },
    "auto_loop": {
        "enabled": true,
        "cooldown_sec": 1.2,
        "retarget": {
            "pan_jitter_deg": 10,
            "tilt_jitter_deg": 6,
            "min_move_deg": 2.0
        },
        "safety": {
            "servo_settle_ms": 250
        }
    },
    "detector": {
        "current": "tflite",
        "mock": {
            "ttl_ms": 500
        },
        "tflite": {
            "backend": "tpu",
            "fallback_backend": "cpu",
            "model_path": "cameta-master/detect.tflite",
            "model_path_tpu": "cameta-master/detect_edgetpu.tflite",
            "edgetpu_delegate": "libedgetpu.so.1",
            "labels_path": "cameta-master/labelmap.txt",
            "threshold": 0.5,
            "inference_fps": 10,
            "target_classes": [
                "cat",
                "person",
                "dog",
                "teddy bear"
            ]
        }
    }
}